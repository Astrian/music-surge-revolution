{
	"name": "music-surge-revolution",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "DEBUG=msrpkg:* vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint": "biome lint ./src",
		"format": "biome format --write ./src",
		"check": "biome check ./src",
		"check:fix": "biome check --write ./src",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/debug": "^4.1.12",
		"debug": "^4.4.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"typescript": "~5.8.3",
		"vite": "^7.0.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
